<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Expense Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- Error Banner -->
    @if (ViewData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show m-0 rounded-0" role="alert">
            <div class="container">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong>Database Connection Error:</strong> @ViewData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <i class="bi bi-chat-square-text text-primary me-2"></i>
                    <span class="fw-semibold text-primary">Expense Management</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Expenses">Expenses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/NewExpense">New Expense</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Approvals">Approvals</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/api-docs" target="_blank">API Docs</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container py-4">
        @RenderBody()
    </main>

    <!-- Chat Button -->
    <button id="chatToggle" class="btn btn-primary rounded-circle shadow-lg position-fixed" 
            style="bottom: 20px; right: 20px; width: 60px; height: 60px; z-index: 1000;">
        <i class="bi bi-chat-dots-fill fs-4"></i>
    </button>

    <!-- Chat Window -->
    <div id="chatWindow" class="card shadow-lg position-fixed d-none" 
         style="bottom: 90px; right: 20px; width: 380px; max-height: 500px; z-index: 1000;">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <span><i class="bi bi-robot me-2"></i>AI Assistant</span>
            <button class="btn btn-link text-white p-0" id="chatClose">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
        <div class="card-body overflow-auto" id="chatMessages" style="height: 350px;">
            <div class="text-muted text-center py-3">
                <i class="bi bi-chat-dots fs-1 d-block mb-2"></i>
                Ask me anything about expenses!
            </div>
        </div>
        <div class="card-footer">
            <div class="input-group">
                <input type="text" id="chatInput" class="form-control" placeholder="Type a message..." />
                <button class="btn btn-primary" id="chatSend">
                    <i class="bi bi-send-fill"></i>
                </button>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/chat.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
